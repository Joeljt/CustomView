<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="JoeTextView">

        <attr name="JoeText" format="string"></attr>
        <attr name="JoeTextColor" format="color|reference"></attr>
        <attr name="JoeTextSize" format="dimension"></attr>
        <attr name="JoeInputType" format="enum">

            <enum name="PHONE" value="1"/>
            <enum name="PASSWORD" value="2"/>
            <enum name="MAILADDRESS" value="3"/>

        </attr>

    </declare-styleable>

</resources>