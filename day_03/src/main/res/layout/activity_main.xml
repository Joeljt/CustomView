<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ljt.day_03.MainActivity">

    <com.ljt.day_03.ColorTrackTextView
        android:id="@+id/tv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lijiateng"
        android:layout_gravity="center"
        android:textSize="30sp"
        app:change_color="@android:color/holo_blue_dark"
        app:origin_color="@android:color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_left_to_right"
            android:text="从左到右"
            android:onClick="leftToRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_right_to_left"
            android:text="从右到左"
            android:onClick="rightToLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <com.ljt.day_03.MyLinearLayout
        android:orientation="vertical"
        android:layout_width="20dp"
        android:layout_height="wrap_content">

        <com.ljt.day_03.MyTextView
            android:id="@+id/tv_measure"
            android:text="lijiateng"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

    </com.ljt.day_03.MyLinearLayout>

</LinearLayout>
